    <contexts>
      <context attribute="Normal Text" lineEndContext="#stay" name="Normal">
        <keyword attribute="Keyword" context="#stay" String="keywords"/>
        <keyword attribute="Special operators" context="#stay" String="special_sym" />

        <Detect2Chars attribute="Assignment" context="#stay" char="-" char1="&gt;"/>
        <StringDetect attribute="Assignment" context="#stay" String="st"/>

        <RegExpr attribute="Matrix" context="#stay" String="\[[\w]\]" />
        <DetectChar attribute="String" context="String" char="&quot;"/>
      </context>
      <context attribute="String" lineEndContext="#stay" name="String">
        <DetectChar attribute="String" context="#pop" char="&quot;"/>
      </context>
    </contexts>
    <itemDatas>
      <itemData name="Normal Text"  defStyleNum="dsNormal"/>
      <itemData name="Assignment" defStyleNum="dsAssign" />
      <itemData name="Keyword" defStyleNum="dsKeyword" />
      <itemData name="String" defStyleNum="dsString" />
      <itemData name="Special operators" defStyleNum="dsSpecOp" />
      <itemData name="Matrix" defStyleNum="dsMatrix" />
    </itemDatas>
